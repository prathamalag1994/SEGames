    <div class="container">

      <div class="starter-template"> 
<h2>Editing Offers</h2>
 
<%= form_for :offer, url: offer_path(@offer), method: :patch do |f| %>
 
  <% if @offer.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@offer.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @offer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
<%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :desc %>
  </p>

  <p>
    <%= f.label :bu %><br>
    <%= f.select :bu, [['Core'],['DPAD'],['ASD'],['ETPD'],['Isilon'],['EMSD'],['Global Alliances'],['Global Accounts'],['Flash'],['Other'],['Pivotal']], autocomplete: "off" %>  <br>
  </p>

  <p>
    <%= f.label :points %><br>
    <%= f.number_field :points %>
  </p>

 <%= f.hidden_field :active , :value => "true" %>
  <p>
  <%= f.label :activity %><br />
  <%= f.collection_select :activity, Allact.all, :name, :name, :prompt => "Select an activity" %>
</p><br>
  <p>
    <%= f.submit %>
  </p>
<% end %>
  

    </div>


    </div>
